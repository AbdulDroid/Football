<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dip">

    <TextView
            android:id="@+id/pos"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginStart="8dip"
            android:textColor="@color/text_black"
            app:layout_constraintHorizontal_weight="0.7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/crest"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="20"/>

    <ImageView
            android:id="@+id/crest"
            android:layout_width="0dip"
            android:layout_height="24dip"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/pos"
            app:layout_constraintEnd_toStartOf="@+id/team_name"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars"
            tools:ignore="ContentDescription"/>

    <TextView
            android:id="@+id/team_name"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginStart="8dip"
            android:textColor="@color/text_black"
            app:layout_constraintHorizontal_weight="5"
            app:layout_constraintEnd_toStartOf="@+id/played"
            app:layout_constraintStart_toEndOf="@+id/crest"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@tools:sample/full_names"/>

    <TextView
            android:id="@+id/played"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginStart="8dip"
            android:textColor="@color/text_black"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/team_name"
            app:layout_constraintEnd_toStartOf="@+id/difference"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="35"/>

    <TextView
            android:id="@+id/difference"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginStart="8dip"
            android:textColor="@color/text_black"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/played"
            app:layout_constraintEnd_toStartOf="@+id/points"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="74"/>

    <TextView
            android:id="@+id/points"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginStart="8dip"
            android:textColor="@color/text_black"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/difference"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="65"/>

</androidx.constraintlayout.widget.ConstraintLayout>