<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/serial_no"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="18sp"
            android:paddingBottom="8dip"
            android:paddingTop="8dip"
            android:textColor="@color/text_black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/player_name"
            app:layout_constraintHorizontal_weight="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="20"/>

    <TextView
            android:id="@+id/player_name"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:gravity="start"
            android:textSize="18sp"
            android:paddingBottom="8dip"
            android:paddingTop="8dip"
            android:layout_marginStart="4dip"
            android:textColor="@color/text_black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/player_role"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintStart_toEndOf="@+id/serial_no"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@tools:sample/full_names"/>

    <TextView
            android:id="@+id/player_role"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dip"
            android:textAlignment="viewEnd"
            android:gravity="end"
            android:textSize="18sp"
            android:paddingBottom="8dip"
            android:paddingTop="8dip"
            android:textColor="@color/text_black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/player_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@tools:sample/full_names"/>

    <View
            android:layout_width="0dip"
            android:layout_height="0.1dip"
            android:background="@color/text_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>